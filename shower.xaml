<Window x:Class="WpfApplication1.shower"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="shower" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Right" Width="792" Margin="0,0,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="206*"/>
            <RowDefinition Height="212*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="images/Shower.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="95" Margin="307,96.241,0,0" VerticalAlignment="Top" Width="188" Grid.Row="2">
            <Image Height="79" Source="images/pou.png" Margin="-23,0,25,0">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="images/pou.png"/>
                </Image.OpacityMask>
            </Image>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="413" Margin="659,0,0,0" VerticalAlignment="Top" Width="125" Grid.Row="1" Grid.RowSpan="2">
            <Button Content="" Height="65" Click="Shower_Click" Tag="0">
                <Button.Background>
                    <ImageBrush ImageSource="images/Trget.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="" Height="65" Click="Shower_Click"  Tag="1">
                <Button.Background>
                    <ImageBrush ImageSource="images/Brash.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="" Height="70" Click="Shower_Click" Tag="2">
                <Button.Background>
                    <ImageBrush ImageSource="images/Sope.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="" Height="70" Click="Shower_Click" Tag="3">
                <Button.Background>
                    <ImageBrush ImageSource="images/Spong.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="" Height="76" Click="Shower_Click" Tag="4">
                <Button.Background>
                    <ImageBrush ImageSource="images/Wash.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="" Height="70" Click="Shower_Click" Tag="5">
                <Button.Background>
                    <ImageBrush ImageSource="images/teeth.jpg"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="25" Margin="44,165,0,0" Grid.Row="2" VerticalAlignment="Top" Width="119">
            <Button Content="BACK" Background="#FF992E16" Click="Button_Click" RenderTransformOrigin="0.493,0.889" FontFamily="Showcard Gothic" FontSize="18" Height="26" HorizontalAlignment="Left" Width="119"/>
        </StackPanel>
        <Label x:Name="LifeCounter" Content=" LIFE" HorizontalAlignment="Left" Height="47" Margin="334,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Background="#FFA22D32" FontFamily="Showcard Gothic" FontSize="24"/>
    </Grid>
</Window>
