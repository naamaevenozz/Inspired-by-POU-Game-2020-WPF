<Window x:Class="WpfApplication1.Madregot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Madregot" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="images/Mdregot.jpg"/>
        </StackPanel.Background>
        <StackPanel HorizontalAlignment="Left" Height="414" Margin="672,0,0,0" Width="114">
            <Button Content="Kitchen" BorderBrush="#FFB41C1C" Foreground="#FF950F0F" FontWeight="Black" Click="Button_Click" Height="133">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InfoColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="How to play?" BorderBrush="#FF9B1F1F" Foreground="#FF992323" FontWeight="Black" FontStyle="Italic" Height="138" Click="Button_Click_1">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InfoColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="Shower" BorderBrush="#FFA42828" Foreground="#FF892424" FontWeight="Black" FontStyle="Italic" Height="130" Click="Button_Click_2">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InfoColorKey}}"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
